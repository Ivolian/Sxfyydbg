<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg" >
    <TextView
        style="@style/login_tv_top_bg"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/rela1"
        android:layout_marginBottom="40dp"
        android:text="欢迎使用移动办公\n请登录" />
    
    <RelativeLayout
        android:id="@+id/rela1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:background="#00000000"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        
         >
<!-- 
        android:background="@drawable/login_shape_bg" -->
        <LinearLayout
            android:id="@+id/linear1"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp" >
            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#EB0738" >
                
            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/login_unlock" />
            </FrameLayout>

            <EditText
                android:id="@+id/et_name"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/login_edit_name_bg"
                android:paddingLeft="10dp"
                android:singleLine="true" 
                android:hint="@string/login_name_hint"
                 >

                
            </EditText>
            
        </LinearLayout>
         <LinearLayout
            android:id="@+id/linear2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/linear1" >

            <FrameLayout
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="#EB0738" >
                
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical|center_horizontal"
                android:src="@drawable/login_lock" />
            </FrameLayout>

            <EditText
                android:id="@+id/et_pwd"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/login_edit_name_bg"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:hint="@string/login_pwd_hint"
                android:inputType="textPassword"
                 >

                
            </EditText>
            
        </LinearLayout>
        <!-- <TextView
            android:id="@+id/tv_logininfo"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="18dp"
            android:gravity="center_vertical|center_horizontal"
            android:padding="5dp"
            android:visibility="gone"
            android:background="@drawable/login_edit_name_bg"
            android:layout_below="@+id/linear2"
            android:text="" /> -->
        <LinearLayout
            android:id="@+id/linear3"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
             android:layout_below="@+id/linear2">
            
         <Button
             android:id="@+id/login_btn_submit"
             android:layout_width="match_parent"
             android:layout_height="48dp"
             android:background="@drawable/login_btn_bg"
             android:textSize="20dp"
             android:textColor="@color/white"
             android:text="@string/login_btn" />
        </LinearLayout>
        <View
            android:id="@+id/viewlogin"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            
            
             android:layout_below="@+id/linear3">
        </View>

        
        
    </RelativeLayout>
    <TextView
        style="@style/login_tv_bottom_bg"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:text="陕西高院移动办公" />
    

</RelativeLayout>
