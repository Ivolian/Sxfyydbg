                 <View style="@style/ccsqb_view_hor_bg" />

                 <LinearLayout 
                     android:visibility="gone"
                     style="@style/lin_ccs_hor_jy_bg" >

                     <TextView
                         style="@style/ccsqb_tv_bg"
                         android:text="备     注" />

                     <View style="@style/ccsqb_view_bg" />

                     <EditText
                         android:id="@+id/et_bz"
                         style="@style/ccsqb_et_jy_bg"
                         android:focusable="false"/>
                 </LinearLayout>

                 <View
                     android:visibility="gone"
                     style="@style/ccsqb_view_hor_bg" />

                 <LinearLayout
                     android:id="@+id/lin_submit"
                     style="@style/lin_px_hor_bg" >

                     <TextView
                         android:id="@+id/tv_qjsq_cklzjl"
                         style="@style/tv_submit_type_bg"
                         android:text="查看流转记录" />

                     <TextView
                         android:id="@+id/tv_qjsq_submit"
                         style="@style/tv_submit_type_bg"
                         android:text="送   出"/>

                 </LinearLayout>
             </LinearLayout>
         </ScrollView>
     </RelativeLayout>

</RelativeLayout>
